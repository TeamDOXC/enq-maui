<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
             x:Class="doxc_maui_enqapp.Pages.ProfileMgmt"
             xmlns:model="clr-namespace:doxc_maui_enqapp.ViewModels"
             Title="ProfileMgmt">
    <VerticalStackLayout>
        <Label 
            Text="{Binding ProfileModel.CompanyProfile.Name}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Text="{Binding ProfileModel.CompanyProfile.Name}" android:Entry.ImeOptions="Send" 
               Placeholder="Company Name" 
       ClearButtonVisibility="WhileEditing" />      
    </VerticalStackLayout>
</ContentPage>